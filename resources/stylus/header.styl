.header

  &__top
    margin-bottom 16px

  &__left
    padding-top 16px

    &__date-place
      padding-top 20px
      margin-left 17px

    &__date
      font-size 24px
      font-weight 600
      font-family glober-thin

    &__place
      font-family glober-bold
      font-size 28px

    &__logo
      margin-left -25px


  &__right

    &__icons
      padding-top 22px
      margin-bottom 29px

    &__icon
      display inline-block
      position relative
      margin-left 12px

      &__topping
        transition background-color 0.2s ease-in
      &:hover .topping
        background-color rgba(font-light, 0.3px)

      & .topping
        top 0
        left 0
        right 0
        bottom 0
        position absolute

      & img
        width 32px

    &__languages
      text-align right

    &__language
      font-family glober-bold
      color grey

      &._selected
        color font-dark


  &__nav
    font-size 0
    text-align justify
    background-color header-light

    & .container:after
      width 100%
      content ''
      display inline-block

    &__button
      color font-light
      width  280px
      height 58px
      display inline-block
      padding 20px 0 20px 0
      font-size 18px
      text-align center
      box-sizing border-box
      transition background-color 0.2s ease-in
      font-weight 600

      foo = 10%

      &._orange
        background-color orange
        &:hover
          background-color lighten(orange, foo)

      &._blue
        background-color blue
        &:hover
         background-color lighten(blue, foo)

      &._violet
        background-color violet
        &:hover
          background-color lighten(violet, foo)

      &._green
        background-color green
        &:hover
          background-color lighten(green, foo)


